@model dotnet_ndru.Models.Kategori

@{
    ViewData["Title"] = "Tambah Kategori Baru";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">@ViewData["Title"]</h3>
    </div>
    <form asp-action="Create">
        <div class="card-body">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Tipe"></label>
                <select asp-for="Tipe" class="form-control" asp-items="Html.GetEnumSelectList<TipeKategori>()"></select>
                <span asp-validation-for="Tipe" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Nama"></label>
                <input asp-for="Nama" class="form-control" />
                <span asp-validation-for="Nama" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Deskripsi"></label>
                <textarea asp-for="Deskripsi" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Deskripsi" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Status"></label>
                <select asp-for="Status" class="form-control" asp-items="Html.GetEnumSelectList<StatusAktif>()"></select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn" style="background-color: var(--pink-medium); color: white;">Simpan</button>
            <a asp-action="Index" class="btn btn-secondary">Batal</a>
        </div>
    </form>
</div>